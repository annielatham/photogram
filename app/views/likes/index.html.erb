<div class="page-header">
  <h1>
    Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Like</th>
        <th>Liking user</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <% if like.photo.present? %>
            <a href="/images/<%= like.photo.id %>">
              <%= like.photo.caption %>
            </a>
          <% end %>
        </td>
        <td><%= like.like %></td>
        <td>
          <% if like.liking_user.present? %>
            <a href="/users/<%= like.liking_user.id %>">
              <%= like.liking_user.username %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == like.liking_user %>
            <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @likes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
