<div class="page-header">
  <h1>
    Images
    <a href="/images/new" class="btn btn-lg btn-success">New Image</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image file</th>
        <th>Posting user</th>
        <th>Actions</th>
      </tr>

      <% @images.each do |image| %>
      <tr>
        <td><%= image.caption %></td>
        <td><img src='<%= image.image_file %>' class='img-responsive'></td>
        <td>
          <% if image.posting_user.present? %>
            <a href="/users/<%= image.posting_user.id %>">
              <%= image.posting_user.username %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/images/<%= image.id %>" class="btn btn-primary">Show</a>
          <a href="/images/<%= image.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_image/<%= image.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @images, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
