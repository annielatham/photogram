<div class="page-header">
  <h3>Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Photo</dt>
      <dd>
        <% if @comment.photo.present? %>
          <a href="/images/<%= @comment.photo_id %>">
            <%= @comment.photo.caption %>
          </a>
        <% end %>
      </dd>

      <dt>Comment text</dt>
      <dd><%= @comment.comment_text %></dd>

      <dt>Commenting user</dt>
      <dd>
        <% if @comment.commenting_user.present? %>
          <a href="/users/<%= @comment.commenting_user_id %>">
            <%= @comment.commenting_user.username %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comments" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @comment.commenting_user %>
        <a href="/comments/<%= @comment.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_comment/<%= @comment.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
